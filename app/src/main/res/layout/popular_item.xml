<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:id="@+id/pop_img"
        app:riv_corner_radius="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img3"
        ></com.makeramen.roundedimageview.RoundedImageView>
    <TextView
        android:id="@+id/pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Product"
        android:fontFamily="casual"
        android:textSize="19sp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/pop_des"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="description"
            android:fontFamily="casual"
            android:textSize="19sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_star_24"/>
            <TextView
                android:id="@+id/pop_rat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                />
            <TextView
                android:id="@+id/pop_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discout 30% off"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textColor="#B14271"
                android:gravity="end"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>